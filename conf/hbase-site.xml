<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!--
/**
 * TODO - hbase set
 * hbase.zookeeper.property.clientPort inject
 * host -  storage
 * port - Num (2181)
 */
-->
<configuration>

        <property>
                <name>hbase.rootdir</name>
                <value>hdfs://storage:9000/hbase</value>
        </property>

        <property>
                <name>hbase.zookeeper.quorum</name>
                <value>storage</value>
        </property>

         <property>
                <name>hbase.zookeeper.property.clientPort</name>
                <value>2181</value>
        </property>


        <property>
                <name>hbase.cluster.distributed</name>
                <value>true</value>
        </property>

        <property>
                <name>hbase.zookeeper.property.dataDir</name>
                <value>/usr/lib/zookeeper</value>
        </property>

        <property>
                <name>hbase.master.info.port</name>
                <value>60010</value>
        </property>

        <property>
                <name>hbase.master.info.bindAddress</name>
                <value>storage</value>
        </property>

        <property>
                <name>dfs.support.append</name>
                <value>true</value>
        </property>

        <property>
                <name>dfs.datanode.max.xcievers</name>
                <value>4096</value>
        </property>

        <property>
                <name>hbase.rpc.timeout</name>
                <value>600000</value>
        </property>

        <property>
                <name>zookeeper.session.timeout</name>
                <value>600000</value>
        </property>

        <property>
                <name>hbase.regionserver.port</name>
                <value>60020</value>
        </property>

         <property>
                <name>hbase.regionserver.handler.count</name>
                <value>100</value>
        </property>
        
         <property>
                <name>hfile.min.blocksize.size</name>
                <value>65536</value>
         </property>

</configuration>
